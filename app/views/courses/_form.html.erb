<%= form_with model: @course do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 5 %> <!-- Changed to text_area for better input -->
  </div>

  <div class="actions">
    <%= form.submit "Create Course" %>
  </div>
<% end %>